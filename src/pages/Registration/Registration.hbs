<div class="login-page">
    <h1>Регистрация</h1>

    <form id="login-form">
        {{> input id="mail" label="Почта" type="mail" placeholder="pochta@yandex.ru" }}
        {{> input id="login" label="Логин" type="text" placeholder="ivanivanov" }}
        {{> input id="username" label="Имя" type="text" placeholder="Иван" }}
        {{> input id="userLastName" label="Фамилия" type="text" placeholder="Иванов" }}
        {{> input id="userPhone" label="Телефон" type="number" placeholder="+7 (909) 967 30 30" }}
        {{> input id="password" label="Пароль" type="password" placeholder="••••••••••••" }}
        {{> input id="passwordRepeat" label="Пароль (ещё раз)" type="password" placeholder="••••••••••••" }}

        <div class="login-page__button-block">
            {{> button id="button" text="Зарегистрироваться" }}
            {{> link link="#" textLink="Войти" }}
        </div>
    </form>
</div>
